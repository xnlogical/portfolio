---
import Card from "../components/ui/Card.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="404: Not Found">
  <main class="flex justify-center">
    <Card class="w-full max-w-2xl px-2">
      <section aria-labelledby="error-heading">
        <div class="font-mono text-sm" role="region">
          <!-- Content -->
          <div class="text-xs">
            <div class="space-y-3">
              <!-- Error display -->
              <div class="flex items-center gap-4 mb-6">
                <p class="text-4xl">ðŸ¤”</p>
                <div class="flex flex-col">
                  <h1 class="text-red-500 dark:text-red-400 text-2xl font-bold">
                    404
                  </h1>
                  <p class="text-muted text-xs">Page not found</p>
                </div>
              </div>

              <!-- Error message -->
              <div
                class="bg-red-500/10 border border-red-500/30 rounded-lg p-4 mb-4"
              >
                <div class="flex items-start gap-2">
                  <span class="text-red-500 dark:text-red-400 font-bold"
                    >ERROR:</span
                  >
                  <p class="text-primary leading-relaxed">
                    The requested resource wasn't found.
                  </p>
                </div>
              </div>

              <div
                class="border-b border-gray-300 dark:border-gray-600 w-full mb-3"
              >
              </div>

              <!-- Terminal-style error details -->
              <div class="space-y-2">
                <div class="flex">
                  <span class="text-muted w-24 shrink-0">Status</span>
                  <span class="text-red-500 dark:text-red-400 font-bold"
                    >404 Not found</span
                  >
                </div>

                <div class="flex">
                  <span class="text-muted w-24 shrink-0">Request</span>
                  <span class="text-primary break-all" id="current-path">
                    Loading...
                  </span>
                </div>

                <div class="flex">
                  <span class="text-muted w-24 shrink-0">Server</span>
                  <span class="text-primary">terminus v1.0</span>
                </div>

                <div class="flex">
                  <span class="text-muted w-24 shrink-0">Date</span>
                  <span class="text-primary" id="error-time"> Loading... </span>
                </div>
              </div>

              <div
                class="border-b border-gray-300 dark:border-gray-600 w-full my-3"
              >
              </div>

              <!-- Suggestions -->
              <div class="space-y-2">
                <p class="text-muted text-xs mb-2">suggested actions:</p>
                <div class="space-y-1 pl-4">
                  <p class="text-secondary">
                    <span class="text-muted">01.</span> check the url
                  </p>
                  <p class="text-secondary">
                    <span class="text-muted">02.</span> go back to
                    <a
                      href="/"
                      class="text-accent hover:text-accent underline focus:outline-none"
                    >
                      main page
                    </a>
                  </p>
                  <p class="text-secondary">
                    <span class="text-muted">03.</span> explore
                    <a
                      href="/blog"
                      class="text-accent hover:text-accent underline focus:outline-none"
                    >
                      blog posts
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </Card>
  </main>

  <script>
    // Display current path and timestamp
    document.addEventListener("DOMContentLoaded", () => {
      const pathElement = document.getElementById("current-path");
      const timeElement = document.getElementById("error-time");

      if (pathElement) {
        pathElement.textContent = window.location.pathname;
      }

      if (timeElement) {
        timeElement.textContent = new Date().toISOString();
      }
    });
  </script>
</BaseLayout>
