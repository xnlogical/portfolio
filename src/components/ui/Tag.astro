---
interface Props {
  tag: string;
  href?: string;
}

const { tag, href } = Astro.props;

const classes =
  "px-2.5 py-1 text-xs font-medium rounded-full bg-accent/10 text-accent border border-accent/20 hover:bg-accent/20 transition-colors";
---

{
  href ? (
    <a href={href} class={classes}>
      #{tag}
    </a>
  ) : (
    <span class={classes}>#{tag}</span>
  )
}
