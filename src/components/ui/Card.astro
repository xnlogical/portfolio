---
type Props = astroHTML.JSX.HTMLAttributes & {
  as?: keyof HTMLElementTagNameMap;
};

const { class: className = "", as: Element = "div", ...attrs } = Astro.props;
---

<Element
  class:list={[
    "bg-white/70 dark:bg-black/10 backdrop-blur-lg border rounded-lg font-mono text-sm p-4 sm:p-6 transition-all duration-300 border-gray-400/50 dark:border-gray-400/30 hover:shadow-sm dark:hover:shadow-md dark:hover:shadow-black/20",
    className,
  ]}
  {...attrs}
>
  <slot />
</Element>
