---
interface Props {
  direction?: "horizontal" | "vertical";
  subtle?: boolean;
  class?: string;
}

const { direction = "horizontal", subtle = false, class: className } = Astro.props;

const borderColor = subtle
  ? "border-gray-300/50 dark:border-gray-700/50"
  : "border-gray-300 dark:border-gray-600";

const baseClasses = direction === "horizontal"
  ? `border-b ${borderColor} w-full`
  : `border-l ${borderColor} h-full`;
---

<div class:list={[baseClasses, className]} role="separator"></div>
