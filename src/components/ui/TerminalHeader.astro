---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div
  class="flex items-center gap-2 mb-4 pb-3 border-b border-gray-300 dark:border-gray-600"
>
  <div class="flex gap-2" role="img" aria-label="Terminal window controls">
    <div class="w-3 h-3 rounded-full bg-red-500"></div>
    <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
    <div class="w-3 h-3 rounded-full bg-green-500"></div>
  </div>
  {title && <span class="text-muted text-xs ml-2 hidden sm:inline">{title}</span>}
</div>
